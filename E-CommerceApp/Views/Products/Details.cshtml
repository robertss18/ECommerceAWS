@model E_CommerceApp.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="text-light mb-4">🛍️ Product Details</h1>

<div class="card bg-dark text-light shadow rounded-4">
    <div class="card-body">
        <h4 class="card-title text-primary-emphasis">🧾 @Model.Name</h4>
        <hr class="border-secondary" />
        <dl class="row">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@string.Format("{0:C}", Model.Price)</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 200px;" />
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary me-2">
        ✏️ Edit
    </a>
    <a asp-action="Index" class="btn btn-outline-light">
        ⬅️ Back to List
    </a>
</div>

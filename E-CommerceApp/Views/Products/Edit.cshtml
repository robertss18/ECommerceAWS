@model E_CommerceApp.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light mb-4">Edit Product</h1>

<div class="bg-dark p-4 rounded shadow-lg">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label text-light"></label>
            <input asp-for="Name" class="form-control bg-secondary text-white border-0" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label text-light"></label>
            <input asp-for="Description" class="form-control bg-secondary text-white border-0" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label text-light"></label>
            <input asp-for="Price" class="form-control bg-secondary text-white border-0" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label text-light"></label>
            <input asp-for="ImageUrl" class="form-control bg-secondary text-white border-0" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
